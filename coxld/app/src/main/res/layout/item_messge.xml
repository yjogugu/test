<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:id="@+id/messageItmem_linearlayout_main">

    <LinearLayout
        android:id="@+id/messageitem_linearlayout_destination"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/message_image_profile"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/messageitem_textview_name"
            android:text="이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:text="메세지"
        android:id="@+id/message_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/messageitem_textview_readcoun_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="1"
            android:textSize="12dp"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/message_time_textview"
            android:text="2011.11.11"
            android:textSize="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/messageitem_textview_readcoun_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="1"
            android:textSize="12dp"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:visibility="invisible"
             />
    </LinearLayout>
    </LinearLayout>

</LinearLayout>